# Environment Configuration for Lambda Performance Testing Application

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Authentication
AUTH_ENABLED=false
API_KEY=your-secure-api-key-here

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=./logs

# Data Generation Settings
DEFAULT_TOTAL_RECORDS=10000
DEFAULT_BATCH_SIZE=100

# Latency Injection Middleware
LATENCY_ENABLED=false
LATENCY_MIN_MS=50
LATENCY_MAX_MS=500
LATENCY_DISTRIBUTION=uniform

# Error Injection Middleware
ERROR_INJECTION_ENABLED=false
ERROR_INJECTION_RATE=0.05

# Security Settings
CORS_ENABLED=true
CORS_ORIGINS=*
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Performance Testing Examples:

# High-Performance Configuration (minimal overhead)
# LATENCY_ENABLED=false
# ERROR_INJECTION_ENABLED=false
# LOG_LEVEL=warn
# COMPRESSION_ENABLED=false

# Chaos Testing Configuration (simulate real-world conditions)
# LATENCY_ENABLED=true
# LATENCY_MIN_MS=100
# LATENCY_MAX_MS=2000
# LATENCY_DISTRIBUTION=exponential
# ERROR_INJECTION_ENABLED=true
# ERROR_INJECTION_RATE=0.1

# Production-Like Configuration
# NODE_ENV=production
# LOG_LEVEL=info
# LOG_FORMAT=json
# HELMET_ENABLED=true
# COMPRESSION_ENABLED=true
# AUTH_ENABLED=true
# API_KEY=your-production-api-key

# Development Configuration
# NODE_ENV=development
# LOG_LEVEL=debug
# LOG_FORMAT=simple
# AUTH_ENABLED=false
# LATENCY_ENABLED=false
# ERROR_INJECTION_ENABLED=false